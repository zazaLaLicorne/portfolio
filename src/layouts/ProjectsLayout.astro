---
import Layout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <slot name="head" />
  </head>

  <body class="bg-white dark:bg-gray-900">
    <Header />

    <main class="content-wrapper container mx-auto py-12">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style>
  /* espace central adapt√© au contenu */
  .content-wrapper {
    max-width: 900px;
    text-align: left;
  }

  /* listes classiques */
  .content-wrapper ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 1rem 0;
  }
  
  .content-wrapper li {
    margin-bottom: 0.4rem;
  }

  .content-wrapper h1,
  .content-wrapper h2,
  .content-wrapper h3,
  .content-wrapper h4 {
    text-align: left;
  }
</style>
