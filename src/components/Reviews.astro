---
import ReviewCard from "./ReviewCard.astro";
import reviews from "@/data/reviews.json";
---

<section id="reviews" class="py-20">
  <div class="container mx-auto px-4">

    <h2
      class="text-4xl font-bold text-center text-gray-900 dark:text-white mb-12"
      data-aos="fade-up"
    >
      Recommandations
    </h2>

    <!-- MASONRY WRAPPER -->
    <div
      class="masonry"
      data-aos="fade-up"
    >
      {reviews.map((review) => (
        <div class="break-inside-avoid mb-8">
          <ReviewCard review={review} />
        </div>
      ))}
    </div>

  </div>
</section>

<style>
  /* Masonry layout avec columns */
  .masonry {
    column-gap: 2rem;
  }

  @media (min-width: 640px) {
    .masonry {
      columns: 2;
    }
  }

  @media (min-width: 1024px) {
    .masonry {
      columns: 3;
    }
  }

  /* EmpÃªche les cards de se casser */
  .break-inside-avoid {
    break-inside: avoid;
  }
</style>
