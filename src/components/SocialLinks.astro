const sizeClasses = {
  sm: "w-10 h-10",
  md: "w-12 h-12",
  lg: "w-16 h-16",
};

const iconSizes = {
  sm: "w-5 h-5",
  md: "w-8 h-8",
  lg: "w-10 h-10",
};
---

<div class={`social-links ${variant === "vertical" ? "flex-col" : "flex-row"}`}>
  {
    socialLinks.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class={`social-link ${sizeClasses[size]} ${link.bgColor}`}
        aria-label={`Visitez mon profil ${link.name}`}
        title={link.name}
      >
        <span
          class={`social-icon ${iconSizes[size]} ${link.color}`}
          set:html={link.icon}
        />
      </a>
    ))
  }
</div>

<style>
  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    color: var(--text, #1f2937);
    transition: all 0.3s ease;
    border: 2px solid transparent;
  }

  .social-link:hover {
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
    border-color: currentColor;
  }

  .social-link:active {
    transform: translateY(-2px) scale(1.02);
  }

  .social-icon {
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Animation de pulse au survol */
  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.8;
    }
  }

  .social-link:hover .social-icon {
    animation: pulse 1.5s ease-in-out infinite;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .social-links {
      gap: 0.75rem;
    }
  }

  /* Dark mode support */
  :global(.dark-mode) .social-link {
    background: rgba(255, 255, 255, 0.1);
    color: #f3f4f6;
  }

  :global(.dark-mode) .social-link:hover {
    background: rgba(255, 255, 255, 0.15);
  }
</style>
