---
import { Image } from "astro:assets";

interface Props {
  variant?: "horizontal" | "vertical";
  size?: "sm" | "md" | "lg";
  showLabel?: boolean;
}

const {
  variant = "horizontal",
  size = "md",
  showLabel = false
} = Astro.props;

const socialLinks = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/isabellelamarre",
    icon: import("../assets/sociallink/linkedin.webp"),
  },
  {
    name: "GitHub",
    url: "https://github.com/zazaLaLicorne",
    iconLight: import("../assets/sociallink/githubnoir.webp"),
    iconDark: import("../assets/sociallink/githubblanc.webp"),
  },
  {
    name: "Malt",
    url: "https://www.malt.fr/profile/isabellelamarre",
    icon: import("../assets/sociallink/malt.webp"),
  },
];

const sizePx = {
  sm: 20,
  md: 28,
  lg: 36,
};

const buttonSize = {
  sm: "w-10 h-10",
  md: "w-12 h-12",
  lg: "w-16 h-16",
};
---

<nav
  class={`social-links ${variant === "vertical" ? "vertical" : "horizontal"}`}
  aria-label="Réseaux sociaux"
>
  {socialLinks.map((link) => (
    <a
      href={link.url}
      target="_blank"
      rel="noopener noreferrer"
      class={`social-link ${buttonSize[size]}`}
      aria-label={`Visitez mon profil ${link.name}`}
    >
      <span class="tooltip">{link.name}</span>
      {/* Cas GitHub (dark / light) */}
      {link.iconLight && (
        <>
          <Image
            src={link.iconLight}
            alt={link.name}
            width={sizePx[size]}
            height={sizePx[size]}
            class="social-icon light-only"
            loading="eager"
          />
          <Image
            src={link.iconDark}
            alt={link.name}
            width={sizePx[size]}
            height={sizePx[size]}
            class="social-icon dark-only"
            loading="eager"
          />
        </>
      )}

      {/* Cas simple (LinkedIn, Malt) */}
      {link.icon && (
        <Image
          src={link.icon}
          alt={link.name}
          width={sizePx[size]}
          height={sizePx[size]}
          class="social-icon"
          loading="eager"
        />
      )}

      {showLabel && (
        <span class="social-label">{link.name}</span>
      )}
    </a>
  ))}
</nav>

<style>
  .social-links {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  .social-links.vertical {
    flex-direction: column;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    justify-content: center;
    border-radius: 999px;
    transition: transform 0.25s ease, box-shadow 0.25s ease;
    text-decoration: none;
    position: relative;
    isolation: isolate;
  }

  .social-link:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 8px 20px rgba(0,0,0,.15);
  }

  .social-icon {
    display: block;
    border-radius: 999px;
  }

  /* Gestion dark / light */
  .dark-only {
    display: none;
  }

  :global(.dark) .light-only {
    display: none;
  }

  :global(.dark) .dark-only {
    display: block;
  }

  .social-label {
    font-size: 0.875rem;
    font-weight: 500;
    white-space: nowrap;
  }

  @media (max-width: 640px) {
    .social-link:hover {
      transform: none;
      box-shadow: none;
    }
  }

  .social-link .tooltip {
  position: absolute;
  bottom: calc(100% + 10px);
  left: 50%;
  transform: translateX(-50%) translateY(6px);

  padding: 6px 10px;
  font-size: 0.75rem;
  font-weight: 500;
  line-height: 1;

  background-color: #111827;
  color: #ffffff;
  border-radius: 6px;
  white-space: nowrap;

  opacity: 0;
  visibility: hidden;
  pointer-events: none;

  box-shadow: 0 6px 20px rgba(0,0,0,.35);
  z-index: 1000;

  transition:
    opacity .2s ease,
    transform .2s ease,
    visibility .2s ease;
}

/* flèche */
.social-link .tooltip::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  transform: translateX(-50%);

  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid #111827;
}

/* ===============================
   AFFICHAGE
================================ */

.social-link:hover .tooltip,
.social-link:focus-visible .tooltip {
  opacity: 1;
  visibility: visible;
  transform: translateX(-50%) translateY(0);
}

/* ===============================
   DARK MODE
================================ */

:global(.dark) .social-link .tooltip {
  background-color: #f9fafb;
  color: #111827;
}

:global(.dark) .social-link .tooltip::after {
  border-top-color: #f9fafb;
}

/* ===============================
   MOBILE : OFF
================================ */

@media (hover: none) {
  .social-link .tooltip {
    display: none;
  }
}

  
</style>
