---
import "../styles/badge.css";
const { label = "Badge", color = "part" } = Astro.props;
---


<span class={`badge badge-${color}`}>{label}</span>

<style>
    .badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 0.875rem;
    font-weight: 600;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    color: white;
    background-color: var(--badgepart);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
  }


.freelance { background-color: var(--freelance); }
.personnel  { background-color: var(--perso); }
.stage     { background-color: var(--stage); }
.entreprise { background-color: var(--entreprise); } 
</style>